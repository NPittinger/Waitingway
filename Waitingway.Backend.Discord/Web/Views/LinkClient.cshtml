@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Waitingway</title>
</head>
<body>
<div class="container">
    <div class="row mt-5">
        @if (ViewBag.Error != null)
        {
            <h1>Error</h1>
            <p>@ViewBag.Error</p>
        }
        else
        {
            <h1>Success!</h1>
            <p>
                Your Waitingway client has been linked to your Discord account!
            </p>
            <p>
                You should have automatically joined the Waitingway Discord server. You must be in the server to receive queue notification DMs.
                <br/>
                <a href="@ViewBag.InviteLink">
                    If you were not automatically joined, click here to join manually.
                </a>
            </p>
        }
    </div>
</div>
</body>
</html>